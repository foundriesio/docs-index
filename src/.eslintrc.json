{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended"
  ],
  "env": {
    "browser": true,
    "node": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-unused-vars": "error",
    "no-undef": "error",
    "block-scoped-var": "error",
    "require-jsdoc": "off",
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ]
  }
}
